{
  "manifest_version": 3,

  "name": "BWDAT",
  "description": "Data collection of Netflix user interface actions for Research studies",
  "version": "1.8.1",

  "icons" : {
	"128": "zicon.png",
	"64": "zicon.png"
  },

  "action": {
    "default_popup": "options.html"
  },
   "content_scripts": [
   {
     "matches": ["https://www.netflix.com/*"],
     "js": ["netflix.js"],
     "run_at": "document_end"
   }],
  
  "permissions": [
    "background",
    "tabs",
    "activeTab",
    "storage"
	],
	"host_permissions": [
		"<server_url>/*"
	],
  "background": {
   "service_worker": "background.js"
  },

 "options_ui": {
    "page": "options.html"
  }
}